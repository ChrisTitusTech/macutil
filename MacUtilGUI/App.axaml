<Application xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="MacUtilGUI.App"
             RequestedThemeVariant="Dark">
    <!-- macOS-compliant dark theme optimized for AcrylicBlur -->

    <Application.DataTemplates>
        <!-- <local:ViewLocator /> -->
    </Application.DataTemplates>
  
    <Application.Styles>
        <FluentTheme />
        
        <!-- Base styles applying to both themes -->
        <Style Selector="Border.macos-window">
            <Setter Property="CornerRadius" Value="15"/>
            <Setter Property="BoxShadow" Value="0 8 32 0 #40000000"/>
        </Style>
        
        <!-- Base typography -->
        <Style Selector="TextBlock.macos-title, TextBlock.macos-body">
            <Setter Property="FontFamily" Value="SF Pro Display,SF Pro Text,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica Neue,Arial,sans-serif"/>
        </Style>
        
        <Style Selector="TextBlock.macos-title">
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>
        
        <Style Selector="TextBlock.macos-body">
            <Setter Property="FontWeight" Value="Normal"/>
        </Style>
        
        <!-- Button base styles -->
        <Style Selector="Button.macos-accent">
            <Setter Property="FontFamily" Value="SF Pro Display,SF Pro Text,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica Neue,Arial,sans-serif"/>
            <Setter Property="Padding" Value="12,8"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="CornerRadius" Value="6"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        
        <Style Selector="Button.macos-list-item">
            <Setter Property="FontFamily" Value="SF Pro Display,SF Pro Text,-apple-system,BlinkMacSystemFont,Segoe UI,Helvetica Neue,Arial,sans-serif"/>
            <Setter Property="HorizontalAlignment" Value="Stretch"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Padding" Value="12,6,12,6"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="BorderThickness" Value="0,0,0,1"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="FontWeight" Value="Medium"/>
        </Style>
        
        <!-- Terminal styles (identical in both themes) -->
        <Style Selector="ScrollViewer.macos-terminal">
            <Setter Property="Background" Value="#000000"/>
        </Style>
        
        <Style Selector="TextBlock.macos-terminal">
            <Setter Property="Background" Value="#000000"/>
            <Setter Property="Foreground" Value="#00FF00"/>
            <Setter Property="FontFamily" Value="SF Mono,Monaco,Inconsolata,Consolas,monospace"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>
        
        <!-- macOS Window Controls -->
        <Style Selector="Button.macos-window-control">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="0"/>
            <Setter Property="Margin" Value="0"/>
        </Style>
        
        <Style Selector="Button.macos-window-control:pointerover">
            <Setter Property="Opacity" Value="0.8"/>
        </Style>
        
        <Style Selector="Button.macos-window-control:pressed">
            <Setter Property="Opacity" Value="0.6"/>
        </Style>
        <!-- Consolidated Dark Theme Styles (works well with AcrylicBlur) -->
        <Style Selector="Border.macos-panel">
            <Setter Property="Background" Value="#E62C2C2E"/>
            <Setter Property="BorderBrush" Value="#B33A3A3C"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #00000075"/>
        </Style>
        
        <Style Selector="Border.macos-left-panel">
            <Setter Property="Background" Value="#772C2C2E"/>
            <Setter Property="BorderBrush" Value="#CC3A3A3C"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #00000000"/>
        </Style>
        
        <Style Selector="Border.macos-right-panel">
            <Setter Property="Background" Value="#992C2C2E"/>
            <Setter Property="BorderBrush" Value="#CC3A3A3C"/>
            <Setter Property="BoxShadow" Value="0 1 3 0 #00000000"/>
        </Style>
        
        <Style Selector="Border.macos-content">
            <Setter Property="Background" Value="#0D1C1C1E"/>
            <Setter Property="BorderBrush" Value="#403A3A3C"/>
        </Style>
        
        <Style Selector="TextBlock.macos-title, TextBlock.macos-body">
            <Setter Property="Foreground" Value="#FFFFFF"/>
        </Style>
        
        <Style Selector="TextBlock.macos-secondary">
            <Setter Property="Foreground" Value="#CCCCCC"/>
        </Style>
        
        <Style Selector="Button.macos-accent">
            <Setter Property="Background" Value="#0A84FF"/>
        </Style>
        
        <Style Selector="Button.macos-accent:pointerover">
            <Setter Property="Background" Value="#409CFF"/>
        </Style>
        
        <Style Selector="Button.macos-accent:pressed">
            <Setter Property="Background" Value="#0969DA"/>
        </Style>
        
        <Style Selector="Button.macos-list-item">
            <Setter Property="Background" Value="#B31C1C1E"/>
            <Setter Property="Foreground" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#B33A3A3C"/>
        </Style>
        
        <Style Selector="Button.macos-list-item:pointerover">
            <Setter Property="Background" Value="#a788882e"/>
        </Style>
    </Application.Styles>
</Application>
